@model Category

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Delete Category";
    
}


<form method="post" asp-action="DeleteCategory">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="index" asp-controller="category" class="btn btn-warning">Back To List</a>
    </div>

</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}